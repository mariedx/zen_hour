html, body {
  margin: 0;
  padding: 0;
  color: #37352F;
}

/*navbar*/
.navbar {
  background-color: white;

  a:link {
    text-decoration: none;
  }

  a:visited {
    text-decoration: none;
  }
}

.nav-logo {
  font-weight: 500;
  color: black;
  font-size: 1.7rem;
  text-decoration: none;

  &:hover {
    color: black;
  }
}

/*jumbotron*/
.jumbotron {
  position: relative;
  height: 85vh;
  background-size: cover;
  background-position-y: 86%;
  opacity: 0.8;
  background-image: url(<%= asset_path 'lotus2.jpeg' %>);
}

.area-jumbotron {
  margin: 7% 55% 10% 5%;

  a {
    margin: 5px 0;
  }
}

.header-jumbotron {
  color: white;
  font-size: calc(24px + 2vw;);
}

/*descriptions*/
.description {
  margin: 8% 0;
}

.lead-text {
  letter-spacing: 0.1rem;
  margin: 0 14%;
}

.coltop  {
  display: flex;
  flex-wrap: wrap;
  margin: 6% 5%;
}


/* MEDIA QUERIES */
@media screen and (max-width: 650px) {
  .background-image {
    background-position-x: 50%;
  }

  .header-jumbotron {
    font-size: 2.7rem;
  }

  .area-jumbotron {
  margin: 10% 15% 10% 5%;
    a {
      margin: 15px 0;
      font-size: 1.2rem;
    }
  }
}