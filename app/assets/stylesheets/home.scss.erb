html, body {
  margin: 0;
  padding: 0;
  color: #37352F;
}

/*navbar*/
.navbar {
  background-color: white;

  a:link {
    text-decoration: none;
  }

  a:visited {
    text-decoration: none;
  }
}

.nav-logo {
  font-weight: 500;
  color: black;
  font-size: 1.7rem;
  text-decoration: none;

  &:hover {
    color: black;
  }
}

/*jumbotron*/
.jumbotron {
  position: relative;
  height: 92vh;
  background-size: cover;
  background-position-y: 86%;
  opacity: 0.8;
  background-image: url(<%= asset_path 'lotus2.jpeg' %>);
}

.area-jumbotron {
  margin: 7% 55% 10% 5%;

  a {
    margin: 5px 0;
  }
}

.header-jumbotron {
  color: white;
  font-size: calc(24px + 2vw;);
}

@media screen and (max-width: 1200px) {
  .background-image {
    height: 49vh;
    background-position-x: 50%;
  }

  .area-jumbotron {
    margin: 10% 5% 10% 5%;
    a {
      margin: 15px 0;
      font-size: 1.2rem;
    }
  }
}

@media screen and (max-width: 650px) {
  .background-image {
    height: 92vh;
    background-position-x: 50%;
  }

  .header-jumbotron {
    font-size: 2.7rem;
  }
}

/*descriptions*/
.description {
  margin: 5% 0;
}

.lead-text {
  letter-spacing: 0.1rem;
  margin: 0 14%;
}

.coltop  {
  display: flex;
  flex-wrap: wrap;
  margin: 6% 5%;
}

.img_presentation {
  height: 80px;
}

/*contact*/
.contact-page {
  background-color: #F7F7F9;
}

.contact-title {
  margin-bottom: 5%
}

.img-center {
  width: 42vh;
  height: auto;
  border-radius: 5px;
  margin-left: 15%;
}

@media screen and (max-width: 1200px) {
  .contact-title {
    margin-bottom: 8%
  }

  .img-center {
    width: 50vh;
    margin-left: 0;
    margin-top: 10%
  }

  .lead-text {
  letter-spacing: 0.1rem;
  margin: 0 8%;
}
}